#! /bin/sh

chosen=$(printf "  Shutdown\n  Reboot\n  Log Out\n  Lock\n  UEFI Menu" | rofi -dmenu -i -theme-str '@import "power.rasi"')

case "$chosen" in
	"  Shutdown") poweroff ;;
	"  Reboot") reboot ;;
	"  Log Out") hyprctl dispatch exit ;;
	"  Lock") hyprlock ;;
	"  UEFI Menu") systemctl reboot --firmware-setup ;;
	*) exit 1 ;;
esac
